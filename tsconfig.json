{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "noEmit": true,
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "~/*": ["src/*"]
        },
        "types": ["jest", "node"]
    },
    "include": ["src", "tests"],
    "exclude": ["node_modules"]
}
